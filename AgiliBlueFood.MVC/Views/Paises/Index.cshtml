@model IEnumerable<AgiliBlueFood.MVC.ViewModels.PaisViewModel>

@{
    ViewBag.Title = "Países";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Cadastrar um País", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomePais)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sigla)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomePais)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sigla)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.PaisId }, new { @class = "navbar-header" }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.PaisId }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.PaisId })
        </td>
    </tr>
}

</table>
